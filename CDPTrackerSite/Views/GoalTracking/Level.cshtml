@model List<DataSource.Level>
@{
    ViewBag.Title = "Level";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="pageDescription">
    <div class="description">

        <h2>@ViewBag.Title</h2>
        <br />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="fancy-table">
                <div class="smallLabels visible-xs pull-right" style="padding-bottom:3px">
                    Add New Level
                    <a href="@Url.Action("CreateLevel")" style="text-decoration: none;padding-left:3px">
                        <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="15" width="15" title="Add Level" style="border: none;" />
                    </a>
                </div>

                <div class="fancy-header hidden-xs">
                    <div class="fancy-row form-group">
                        <div class="form-group col-sm-9 text-center">
                            Level
                        </div>
                        <div class="form-group col-sm-3 text-center">
                            <a href="@Url.Action("CreateLevel")" style="text-decoration: none;">
                                <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="15" width="15" title="Add Level" style="border: none;" />
                            </a>
                        </div>

                    </div>
                </div>

                <div class="fancy-body">
                    @if (Model == null)
                    {
                        <div class="fancy-row form-group">
                            <div class="form-group col-sm-12">
                                <div>
                                    No Data Available
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var level in Model)
                        {

                            <div class="fancy-row form-group">

                                <div class="form-group col-sm-9 text-center">
                                    <div class="smallLabels visible-xs">
                                        Level
                                    </div>
                                    @level.Name
                                </div>

                                <div class="form-group col-sm-3 text-center">
                                    <a href="@Url.Action("EditLevel", new { id = level.LevelId })" style="text-decoration: none">
                                        <img src="@Url.Content("~/Content/images/EditGoal-icon.png")" height="22" width="22" title="Edit Level" style="margin-left: 10px; border: none;" />
                                    </a>
                                    &nbsp &nbsp
                                    <a href="@Url.Action("DeleteLevel", new { id = level.LevelId })" style="text-decoration:none">
                                        <img src="@Url.Content("~/Content/images/DeleteGoal-icon.png")" height="17" width="17" title="Delete Level" style="border: none;" />
                                    </a>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>

        }
    </div>
</div>