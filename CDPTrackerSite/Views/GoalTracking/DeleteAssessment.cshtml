@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DataSource.Assessment
<h2>Delete Asessment</h2>

<h3>Are you sure you want to delete this Assessment?</h3>
@using (Html.BeginForm("DeleteAssessmentConfirmed", "GoalTracking",FormMethod.Post))
{
    @Html.HiddenFor(x=>x.AssessmentId)
    <fieldset>
        <legend>Details</legend>
        <div class="display-label"><b>Description:</b> @Html.DisplayFor(model => model.Description)</div>
        <div class="display-label"><b>Term:</b> @Html.DisplayFor(model => model.TermProperty.Name)</div>
        <p>
            <input type="submit" value="Delete" />
        </p>
    </fieldset>
}
<div>
    <a href="@Url.Action("SelfAssessment", "GoalTracking")">
        <img src="@Url.Content("~/Content/images/BackTiempoButtonWB.jpg")" height="25" width="25" title="Back to List" style="border: none" />
    </a>
</div>

