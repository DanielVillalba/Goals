@model DataSource.TrainingProgram
@{
    ViewBag.Title = "Training Program";
}


<style type="text/css">
    /*table {
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

        table td {
            border: 1px solid #ddd;
        }*/
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="pageDescription">
    <div class="description">
        <h2>@ViewBag.Title</h2>
        <h3>Are you sure you want to delete this training program?</h3>
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>Details</legend>
                @Html.HiddenFor(model => model.IdTrainingProgram)
                <div class="display-label"><b>@Html.LabelFor(x => x.Name) :</b> @Html.DisplayFor(model => model.Name)</div>
                <div class="display-label"><b>@Html.LabelFor(x => x.Position) :</b> @Html.DisplayFor(model => model.Position1.PositionName)</div>
                <div class="display-label"><b>@Html.LabelFor(x => x.Category) :</b> @Html.DisplayFor(model => model.TrainingProgramCategory.Name)</div>
                @*        <div class="display-label"><b>@Html.LabelFor(x=> x.Points) :</b> @Html.DisplayFor(model => model.Points)</div>*@
                <div class="display-label"><b>@Html.LabelFor(x => x.Link) :</b> @Html.DisplayFor(model => model.Link)</div>

                <p class="buttons-div">
                    <input type="submit" value="Delete" />
                </p>

                <br />

                @if (ViewBag.error != "")
                {
                    <p style="color: #FF0000; font-size: medium;"><strong>@ViewBag.error</strong></p>
                }
            </fieldset>
        }
       
    </div>
</div>