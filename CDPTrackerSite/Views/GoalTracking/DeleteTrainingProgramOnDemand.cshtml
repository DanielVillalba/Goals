@model DataSource.TrainingProgramOnDemand
@{
    ViewBag.Title = "Delete Training Program On Demand";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h3>Are you sure you want to delete this training program?</h3>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Details</legend>
        @Html.HiddenFor(model => model.IdTrainingProgramOnDemand)
        <div class="display-label"><b>@Html.LabelFor(x=> x.Name) :</b> @Html.DisplayFor(model => model.Name)</div>
        <div class="display-label"><b>Start Date :</b> @String.Format("{0:d}", Model.StartDate)</div>
        <div class="display-label"><b>Finish Date :</b> @String.Format("{0:d}", Model.FinishDate)</div>
        @*<div class="display-label"><b>@Html.LabelFor(x=> x.Points) :</b> @Html.DisplayFor(model => model.Points)</div>*@
        <div class="display-label"><b>@Html.LabelFor(x=> x.Link) :</b> @Html.DisplayFor(model => model.Link)</div>      

        <p>
            <input type="submit" value="Delete" />
        </p>

        <br />

        <div>
            @Html.ValidationMessage("Error")
        </div>
    </fieldset>
}
<div>
    
</div>
