                            </div>
                            <label class="row-label green">G</label>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="smallLabels visible-xs">
                                Critical Number
                            </div>
                            @if(@ViewBag.onePagePlanId != 0)
                            {
