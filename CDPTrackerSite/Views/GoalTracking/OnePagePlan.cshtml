                    </div>
                      
                    </div>
            </div>
            

            @* --------------------------- KEY THRUSTS --------------------------- *@
            <div id="keyThrustsList" class="fancy-table fancy-todo-table">
                <div class="fancy-description">
                    <div>
                        <label class="subtitle">Key Thrusts</label>
                    </div>
                    <div> 
                        <img id="addTaskButton" class="add-row-btn" src="@Url.Content("~/Content/images/Add.png")" title="Add New" />
                    </div>
                </div>

                <div class="fancy-header fancy-gray">
                    <div class="fancy-row form-group panel-default">
                        <div class="form-group col-sm-1 fancy-counter-column">
                            #
                        </div>
                        <div class="form-group col-sm-11">
                            Key Thrust
                        </div>
                        <div class="form-group col-sm-1 fancy-actions-column">
                            &nbsp;
                        </div>
                    </div>
                </div>

                <div class="fancy-body">
               @if (@ViewBag.onePagePlanId != 0)
                {
                    int i = 0;

                    foreach (var item in @ViewBag.keythrust)
                    {

                    <div class="fancy-row form-group" data-key-thrust-id="0">
                        <div class="form-group col-sm-1 fancy-counter-column">
                            &nbsp;
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="smallLabels visible-xs">
                                Key Thrust
                            </div>
                            <input type="text" class="form-control txtKeyThrust" value="@ViewBag.keythrust[i++].KeyThrust" required="required" maxlength="200">
                        </div>
                        <div class="form-group col-sm-1 fancy-actions-column">
                            <img src="/Content/images/Delete-icon.png" title="Remove" class="fancy-button remove-row-btn">
                        </div>
                    </div>
                  }
                  
                }                    
                </div>

            </div>
            


            @* --------------------------- ANNUAL PRIORITIES --------------------------- *@
            <div id="annualPrioritiesList" class="fancy-table fancy-todo-table">
