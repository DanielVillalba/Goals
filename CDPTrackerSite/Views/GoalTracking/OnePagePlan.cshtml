                                }
                            </select>
                        </div>
                    </div>

                    <div class="fancy-row form-group" data-core-value-id="2">
                        @*<div class="form-group col-sm-1 fancy-counter-column">
                            &nbsp;
                        </div>*@
                        <div class="form-group col-sm-2">
                            <div class="smallLabels visible-xs">
                                Month:
                            </div>
                            <label class="row-label month"></label>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="smallLabels visible-xs">
                                Core Value
                            </div>
                            <select id="combo2" class="cbCoreValue form-control">
                                @foreach (var coreVal in Model)
