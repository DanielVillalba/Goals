<script src="@Url.Content("~/Scripts/jquery.browser.js")"></script>
<script>
    jQuery(document).ready(function () {
        var config = {
            onePagePlanId: @ViewBag.onePagePlanId 
            };

        var coreValuesList = new CoreValuesList(jQuery('#coreValuesList'), jQuery('#ListOfQuarters').val(),'@ViewBag.coreValue1','@ViewBag.coreValue2','@ViewBag.coreValue3');
        var keyThrustsList = new KeyThrustsList(jQuery('#keyThrustsList'), jQuery('#keyThrustRowTemplate'));
        var annualPrioritiesList = new AnnualPrioritiesList(jQuery('#annualPrioritiesList'), jQuery('#annualPriorityRowTemplate'));
        var criticalNumbersList = new CriticalNumbersList(jQuery('#criticalNumbersList'));
        var onePagePlanRequestsHandler = new OnePagePlanRequestsHandler();
        var onePagePlanManager = new OnePagePlanManager(
            config,
            onePagePlanRequestsHandler,
            coreValuesList,
            keyThrustsList,
            annualPrioritiesList,
            criticalNumbersList
        );

       
       
     
        // Initialize
        onePagePlanManager.init();



    });

   
   

   
   

</script>