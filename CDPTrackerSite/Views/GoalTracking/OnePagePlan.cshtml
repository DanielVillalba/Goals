                            <label class="row-label red">SG</label>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="smallLabels visible-xs">
                                Critical Number
                            </div>
                            @if (@ViewBag.onePagePlanId != 0)
                            {
