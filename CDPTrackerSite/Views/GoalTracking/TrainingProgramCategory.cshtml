@model List<DataSource.TrainingProgramCategory>
@{
    ViewBag.Title = "Training Program Category";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="pageDescription">
    <div class="description">
        <h2>@ViewBag.Title</h2>
        <br />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="fancy-table">

                <div class="smallLabels visible-xs pull-right" style="padding-bottom:3px">
                    Add New
                    <a href="@Url.Action("CreateTrainingProgramCategory")" style="text-decoration: none">
                        <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="18" width="18" title="Add Training Program" style="border:none" />
                    </a>
                </div>

                <div class="fancy-header hidden-xs">
                    <div class="fancy-row form-group">
                        <div class="form-group col-sm-8 text-center">
                            Training Program Category
                        </div>
                        <div class="form-group col-sm-4 text-center">
                            <a href="@Url.Action("CreateTrainingProgramCategory")" style="text-decoration: none">
                                <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="18" width="18" title="Add Training Program" style="border:none" />
                            </a>
                        </div>
                    </div>
                </div>

                <div class="fancy-body">
                    @if (Model == null)
                    {
                        <div class="fancy-row form-group">
                            <div class="form-group col-sm-12">
                                <div>
                                    No Data Available
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <div class="fancy-row form-group">

                                <div class="form-group col-sm-8 text-center">
                                    <div class="smallLabels visible-xs">
                                        Training Program Category
                                    </div>
                                    @item.Name
                                </div>

                                <div class="form-group col-sm-4 text-center">
                                    <a href="@Url.Action("EditTrainingProgramCategory", new { id = item.IdTrainingProgramCategory })" style="text-decoration: none">
                                        <img src="@Url.Content("~/Content/images/EditGoal-icon.png")" height="22" width="22" title="Edit Training Program" style="margin-left: 10px; border: none;" />
                                    </a>
                                    &nbsp &nbsp
                                    <a href="@Url.Action("DeleteTrainingProgramCategory", new { id = item.IdTrainingProgramCategory })" style="text-decoration:none">
                                        <img src="@Url.Content("~/Content/images/DeleteGoal-icon.png")" height="17" width="17" title="Delete Training Program" style="border: none;" />
                                    </a>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>

        }
    </div>
</div>
