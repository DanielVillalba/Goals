@model DataSource.Position
@{
    ViewBag.Title = "Add/Edit Link";
}



<style type="text/css">
    table {
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

        table td {
            border: 1px solid #ddd;
        }
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#Description").keyup(function () {
            if ($('#Description').val() == "") {
                document.getElementById("desctiption").innerHTML = "The Link Description field cannot be empty";
            }
            else {
                document.getElementById("desctiption").innerHTML = "";
            }
        });
    });
</script>
<div class="pageDescription">
    <div class="description">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>                
                @Html.HiddenFor(model => model.AreaId)
                @Html.HiddenFor(model => model.PositionId)
                @Html.HiddenFor(model => model.PositionName)
                <div class="editor-label">
                    @Html.Label("Link Description")
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Description, new { style = "width:500px", required = "required", autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                <div>
                    <label id="desctiption" style="color: red;"></label>
                </div>

                @if (ViewBag.error != "")
                {
                    <p style="color: #FF0000; font-size: medium;"><strong>@ViewBag.error</strong></p>
                }

                <p>
                    <input type="submit" value="Save" style="padding-left:10px;padding-right:10px"/>
                </p>
            </fieldset>           
        }
    </div>
</div>