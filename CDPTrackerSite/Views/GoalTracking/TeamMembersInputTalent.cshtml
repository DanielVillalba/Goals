    $("#combo1").change(function () {
        var id = $(this).val();

        var data = {};
        data.ResourceId = id;
        data.Name = "";
        // console.debug(data);
        $.ajax({
            type: "post",
            url: "GetManagerFromLocation",
            data: { data: JSON.stringify(data) },
            success: function (sr) {

                //   console.debug(sr);

                $('#combo2')
                             .find('option')
                             .remove()
                             .end();

