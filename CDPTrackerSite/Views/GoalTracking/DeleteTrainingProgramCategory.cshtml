@model DataSource.TrainingProgramCategory
@{
    ViewBag.Title = "Delete Training Program Category";
}

<style type="text/css">
    /*table{
      border-collapse: collapse;
      border: 1px solid #ddd;
    }
    table td{
      border: 1px solid #ddd;
    }*/
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="pageDescription">
    <div class="description">
        <h2>@ViewBag.Title</h2>
        <br />
        <h4>Are you sure you want to delete this training program category?</h4>
        @using (Html.BeginForm())
        {
            <fieldset>                
                @Html.HiddenFor(model => model.IdTrainingProgramCategory)
                <div class="display-label">@Html.Label("Training Program Category") : @Html.DisplayFor(model => model.Name)</div>

                @if (ViewBag.error != "")
                {
                    <p style="color: #FF0000; font-size: medium;"><strong>This training program category can not be deleted.</strong></p>
                }

                <div class="buttons-div">
                    <input type="submit" value="Delete" />
                </div>
            </fieldset>
        }
        
    </div>
</div>