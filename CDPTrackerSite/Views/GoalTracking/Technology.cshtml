@model List<DataSource.Technologies>
@{
    ViewBag.Title = "Technology";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



<div class="pageDescription">
    <div class="description">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="fancy-table">
                <div class="fancy-title text-center hidden-xs">
                    <div>
                        Technologies
                    </div>
                </div>

                <div class="smallLabels visible-xs pull-right" style="padding-bottom:3px">
                    Add New
                    <a href="@Url.Action("CreateTechnology")" style="text-decoration: none">
                        <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="18" width="18" title="Add Technology" style="border: none" />
                    </a>
                </div>

                <div class="fancy-header hidden-xs">
                    <div class="fancy-row form-group">
                        <div class="form-group col-sm-8 text-center">
                            Technology
                        </div>
                        <div class="form-group col-sm-4 text-center">
                            <a href="@Url.Action("CreateTechnology")" style="text-decoration: none">
                                <img src="@Url.Content("~/Content/images/AddGoal-icon.png")" height="15" width="15" title="Add Technology" style="border: none" />
                            </a>
                        </div>
                    </div>
                </div>

                <div class="fancy-body">
                    @if (Model == null)
                    {
                        <div class="fancy-row form-group">
                            <div class="form-group col-sm-12">
                                <div>
                                    No Data Available
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var technologies in Model)
                        {
                            <div class="fancy-row form-group">

                                <div class="form-group col-sm-8 text-center">
                                    <div class="smallLabels visible-xs">
                                        Technology
                                    </div>
                                    @technologies.Name
                                </div>

                                <div class="form-group col-sm-4 text-center">
                                    <a href="@Url.Action("EditTechnology", new { id = technologies.TechnologyId })" style="text-decoration: none">
                                        <img src="@Url.Content("~/Content/images/EditGoal-icon.png")" height="22" width="22" title="Edit Technology" style="margin-left: 10px; border: none;" />
                                    </a>
                                    &nbsp &nbsp
                                    <a href="@Url.Action("DeleteTechnology", new { id = technologies.TechnologyId })" style="text-decoration:none">
                                        <img src="@Url.Content("~/Content/images/DeleteGoal-icon.png")" height="17" width="17" title="Delete Technology" style="border: none;" />
                                    </a>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>
